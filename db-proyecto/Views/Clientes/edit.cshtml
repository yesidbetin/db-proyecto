@model db_proyecto.Models.cliente

@{
    ViewBag.Title = "Edit";
}

<h2>Editar Cliente </h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>cliente</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)


        <label class="control-label col-md-2" for="nombre">Nombre Usuario</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">

        <label class="control-label col-md-2" for="documento ">Numero Documento </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.documento, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.documento, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">

        <label class="control-label col-md-2" for="email">Correo Electronico </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", @type = "email" } })
            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Actualizar " class="btn btn-default" />
        </div>
    </div>

}

<div>
    @Html.ActionLink("Regresar a la lista ", "Index")
</div>
