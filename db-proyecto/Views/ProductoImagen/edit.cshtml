@model db_proyecto.Models.producto_imagen

@using (Html.BeginForm())

{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>imagen producto</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            <label class="control-label col-md-2" for="imagen">Imagen Producto</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.imagen, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.imagen, "", new { @class = "text-danger" })
            </div>
        </div>


        <label class="control-label col-md-2" for="id_producto">ID Producto</label>
        <div class="col-md-10">

        </div>


        <div class="col-md-10">
            @Html.Action("ListarProducto")
            @Html.ValidationMessageFor(model => model.id_producto, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Guardar" class="btn btn-default" />
        </div>
    </div>

}

<div>
    @Html.ActionLink("Regresar a la lista de imagenes ", "Index")
</div>
